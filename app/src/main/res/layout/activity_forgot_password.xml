<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tenderWatch.ForgotPassword"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFF"
        android:layout_marginTop="@dimen/value_10"
        android:layout_marginLeft="@dimen/value_15"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/forgot_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="@dimen/value_20"
                    android:layout_height="@dimen/value_20"
                    android:src="@drawable/left_arr_3x"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_15"
                    android:layout_marginLeft="@dimen/value_7"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFF"
        android:layout_marginBottom="@dimen/value_150"
        android:gravity="center"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_30"
            android:layout_marginRight="@dimen/value_30"
            >
            <ImageView
                android:layout_width="@dimen/value_20"
                android:layout_height="@dimen/value_20"
                android:src="@drawable/mail_3x"
                android:layout_marginTop="@dimen/value_10"
                />

            <EditText
                android:id="@+id/txt_forgotemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value_40"
                android:hint="Email"
                android:textSize="@dimen/text_15"
                android:backgroundTint="@android:color/transparent"
                android:singleLine="true"
                />

        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginLeft="@dimen/value_20"
            android:layout_marginRight="@dimen/value_20"
            android:layout_marginBottom="@dimen/value_5"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/value_50"
            android:layout_marginLeft="@dimen/value_50"
            android:layout_marginTop="@dimen/value_40">
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_40"
                android:background="@drawable/button"
                android:layout_gravity="center"
                android:text="Submit"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"

                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
