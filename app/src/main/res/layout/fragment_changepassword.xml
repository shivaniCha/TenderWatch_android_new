<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center|top"
    android:orientation="vertical"
    android:padding="@dimen/value_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/value_30"
        android:layout_marginRight="@dimen/value_30"
        android:layout_marginTop="@dimen/value_40">

        <ImageView
            android:layout_width="@dimen/value_30"
            android:layout_height="@dimen/value_30"
            android:layout_marginTop="@dimen/value_7"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_password" />


        <EditText
            android:id="@+id/txt_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_40"
            android:backgroundTint="@android:color/transparent"
            android:hint="Old Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="@dimen/text_20" />


    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/value_5"
        android:layout_marginLeft="@dimen/value_30"
        android:layout_marginRight="@dimen/value_30"
        android:background="#808080" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/value_30"
        android:layout_marginRight="@dimen/value_30"
        android:layout_marginTop="@dimen/value_7">

        <ImageView
            android:layout_width="@dimen/value_30"
            android:layout_height="@dimen/value_30"
            android:layout_marginTop="@dimen/value_5"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_password"/>


        <EditText
            android:id="@+id/txt_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_40"
            android:backgroundTint="@android:color/transparent"
            android:hint="New Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="@dimen/text_20" />


    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/value_5"
        android:layout_marginLeft="@dimen/value_30"
        android:layout_marginRight="@dimen/value_30"
        android:background="#808080" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/value_30"
        android:layout_marginRight="@dimen/value_30"
        android:layout_marginTop="@dimen/value_7">

        <ImageView
            android:layout_width="@dimen/value_30"
            android:layout_height="@dimen/value_30"
            android:layout_marginTop="@dimen/value_5"
            android:layout_centerVertical="true"
            android:src="@drawable/boxright_3x" />

        <EditText
            android:id="@+id/txt_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_40"
            android:backgroundTint="@android:color/transparent"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="@dimen/text_20" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/value_5"
        android:layout_marginLeft="@dimen/value_30"
        android:layout_marginRight="@dimen/value_30"
        android:background="#808080" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_40"
        android:layout_marginLeft="@dimen/value_40"
        android:layout_marginRight="@dimen/value_40"
        android:layout_marginTop="@dimen/value_30"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_changePassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_40"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:text="Change"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_20" />
    </LinearLayout>
</LinearLayout>