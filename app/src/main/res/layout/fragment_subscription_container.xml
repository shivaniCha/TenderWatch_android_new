<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Drawer.SubscriptionContainer"
    android:background="@color/colorWhite">
    
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_subscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/green_color"
        android:background="@color/colorBackground"
        app:tabBackground="@color/colorBackground"
        app:tabTextColor="#81c784"
        app:tabSelectedTextColor="@color/green_color"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        android:elevation="@dimen/value_5"/>

    <com.tenderWatch.utils.NonSwipeableViewPager
        android:id="@+id/vp_subscription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>