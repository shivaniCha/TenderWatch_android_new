<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/value_70"
                    android:layout_height="@dimen/value_70"
                    android:gravity="end">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/tender_image2"
                        android:layout_width="@dimen/value_70"
                        android:layout_height="@dimen/value_70"
                        android:padding="@dimen/value_5"
                        android:src="@drawable/avtar" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/tender_image3"
                        android:layout_width="@dimen/value_30"
                        android:layout_height="@dimen/value_30"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:background="#00000000"
                        android:padding="@dimen/value_5"
                        android:src="@drawable/right_tick_3x"
                        android:visibility="gone"
                        app:civ_border_width="@dimen/value_1"
                        app:civ_border_color="#FFF"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_90"
                android:layout_marginLeft="@dimen/value_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/value_2"
                        android:text="Title:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/value_2"
                        android:text="Exp_Day:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_15" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_90">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/value_90"
                    android:layout_marginLeft="@dimen/value_10"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/value_20"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tender_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="Name:"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_15" />

                            <TextView
                                android:id="@+id/tender_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/value_2"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="Title:"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_15" />

                            <TextView
                                android:id="@+id/tender_expdate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true"
                                android:text="Exp_Day:"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_15" />


                        </LinearLayout>



                        <ImageView
                            android:layout_width="@dimen/value_20"
                            android:layout_height="@dimen/value_20"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/right_arr_3x" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tender_read"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New"
                        android:textColor="@android:color/holo_red_dark"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_gravity="end"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_tender_amed"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amended"
                        android:textColor="@android:color/holo_red_dark"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_gravity="end"
                        android:visibility="gone"/>
                </LinearLayout>



            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/stamp_remove"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_grey"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:rotation="-20"
                android:text="REMOVED"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>