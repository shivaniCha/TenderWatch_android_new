<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:layout_margin="@dimen/value_4">

    <ImageView
        android:id="@+id/flag_img"
        android:layout_width="@dimen/value_26"
        android:layout_height="@dimen/value_35"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/value_5" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/value_4"
        android:layout_marginLeft="@dimen/value_4"
        android:text="Item"
        android:textColor="#000" />

    <ImageView
        android:layout_gravity="center"
        android:layout_margin="@dimen/value_4"
        android:layout_width="@dimen/value_10"
        android:layout_height="@dimen/value_10"
        android:id="@+id/imgtrue"
        android:src="@drawable/tick_3x"
        android:visibility="gone"/>

</LinearLayout>