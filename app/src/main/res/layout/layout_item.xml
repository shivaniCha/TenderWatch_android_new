<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:id="@+id/itemlayout"

    >
    
<ImageView
    android:layout_width="@dimen/value_26"
    android:layout_height="@dimen/value_35"
    android:id="@+id/img"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="@dimen/value_5"/>
    <TextView
        android:id="@+id/tvItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/value_50"
        android:layout_gravity="center_vertical"
        android:text="Item"
        android:layout_marginTop="@dimen/value_7"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/tvItemCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/value_50"
        android:layout_gravity="center_vertical"
        android:text="Item"
        android:layout_marginTop="@dimen/value_7"
        android:textColor="#000"
        android:visibility="gone"/>
    <ImageView
        android:layout_width="@dimen/value_10"
        android:layout_height="@dimen/value_10"
        android:id="@+id/imgtrue"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/value_5"
        android:layout_marginTop="@dimen/value_10"
        android:src="@drawable/tick_3x"
        android:visibility="gone"

        android:layout_alignParentRight="true"/>
</RelativeLayout>